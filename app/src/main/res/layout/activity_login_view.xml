<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".LoginView">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineStart2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.01" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineEnd2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.98" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTop2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.01" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineMiddle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />

    <ImageView
        android:layout_width="600dp"
        android:layout_height="500dp"
        android:layout_gravity="end"
        android:background="@drawable/multistore"
        app:layout_constraintEnd_toEndOf="@id/guidelineEnd2"
        app:layout_constraintTop_toTopOf="@id/guidelineMiddle2" />


        <ImageView
            android:id="@+id/imageButtonBackLanding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/back_left"
            app:layout_constraintStart_toEndOf="@+id/guidelineStart2"
            app:layout_constraintTop_toBottomOf="@+id/guidelineTop2"/>

        <TextView
            android:id="@+id/textViewSignIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign In"
            android:textSize="50sp"
            app:layout_constraintStart_toEndOf="@+id/guidelineStart2"
            app:layout_constraintTop_toBottomOf="@+id/imageButtonBackLanding"/>

        <TextView
            android:id="@+id/textViewFollow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Follow the simple steps"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@id/guidelineStart2"
            app:layout_constraintTop_toBottomOf="@id/textViewSignIn"/>

        <TextView
            android:id="@+id/textViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="30sp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/guidelineMiddle2"
            app:layout_constraintStart_toStartOf="@id/guidelineStart2"/>

        <EditText
            android:id="@+id/editTextName"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/background_view_white"
            app:layout_constraintWidth_percent="0.45"
            app:layout_constraintHeight_percent="0.07"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/textViewName"
            app:layout_constraintStart_toEndOf="@id/guidelineStart2"/>

        <TextView
            android:id="@+id/textViewPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textSize="30sp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/editTextName"
            app:layout_constraintStart_toEndOf="@id/guidelineStart2"/>

        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.45"
            app:layout_constraintHeight_percent="0.07"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_view_white"
            app:layout_constraintStart_toEndOf="@id/guidelineStart2"
            app:layout_constraintTop_toBottomOf="@id/textViewPassword"/>

        <Button
            android:id="@+id/buttonSignIn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_btn"
            android:text="Sign In"
            android:textAllCaps="false"
            android:textSize="30sp"
            android:layout_marginTop="50dp"
            app:layout_constraintWidth_percent="0.45"
            app:layout_constraintHeight_percent="0.08"
            app:layout_constraintTop_toBottomOf="@id/editTextPassword"
            app:layout_constraintStart_toEndOf="@id/guidelineStart2"/>



</androidx.constraintlayout.widget.ConstraintLayout>